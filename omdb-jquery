movieYear.classlList.add("movie-release-date");
link.setAttribute("href","http://imdb.com/title/"+reults["search"][i]["imdbID"]);
link.textContent= reults["Search"][i]["Title"];
movieYear.textContent = results["Search"][i]["Year"];

ul.appendChild(li);
li.appendChild(movieDiv);
movieDiv.appendChild(link);
lik.appendChild(movieYear);

  }
}

